<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="trainee_JoseLopez" resource="default" engine="innodb" comment="Table Trainee JOSELOPEZ">
        <column name="user_id"      xsi:type="int" unsigned="true" nullable="false" identity="true" comment="UserID"/>
        <column name="name"         xsi:type="varchar" length="255" nullable="false" comment="Name User"/>
        <column name="lastname"    xsi:type="varchar" length="255" nullable="false" comment="Last Name User"/>
        <column name="age"          xsi:type="int" nullable="false" comment="Age User"/>
        <column name="height"       xsi:type="decimal" scale="4" precision="12" nullable="false" comment="Height User"/>
        <column name="weight"       xsi:type="decimal" scale="4" precision="12" nullable="false" comment="Weight USer"/>
        <constraint                 xsi:type="primary" referenceId="PRIMARY">
            <column name="user_id"/>
        </constraint>
    </table>
</schema>
